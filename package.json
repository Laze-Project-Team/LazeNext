{
  "name": "laze-web",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev:server": "ts-node -r tsconfig-paths/register --project tsconfig.server.json server/index.ts",
    "dev": "next dev",
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "build": "yarn build:server & yarn build:next",
    "start": "node ./dist/server/index.js",
    "lint": "next lint",
    "lint:eslint": "eslint --cache .",
    "lint:prettier": "prettier --check .",
    "test": "jest",
    "test:docs": "ts-node -r tsconfig-paths/register --project tsconfig.server.json test/docs.ts",
    "test:locale": "ts-node -r tsconfig-paths/register --project tsconfig.server.json test/locale.ts",
    "analyze": "ANALYZE=true next build",
    "prepare": "husky install"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "dependencies": {
    "@codingame/monaco-jsonrpc": "^0.3.1",
    "@codingame/monaco-languageclient": "^0.17.4",
    "@monaco-editor/react": "^4.4.1",
    "@reduxjs/toolkit": "^1.8.1",
    "antd": "^4.19.3",
    "antd-img-crop": "^4.2.0",
    "applicationinsights": "^2.3.0",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "firebase": "^9.6.10",
    "monaco-editor": "^0.33.0",
    "next": "12.1.3",
    "next-i18next": "^10.5.0",
    "nprogress": "0.2.0",
    "react": "17.0.2",
    "react-complex-tree": "^1.1.4",
    "react-contexify": "^5.0.0",
    "react-dom": "17.0.2",
    "react-error-boundary": "3.1.4",
    "react-icons": "^4.3.1",
    "react-jdenticon": "^1.0.0",
    "react-markdown": "^8.0.2",
    "react-redux": "^7.2.7",
    "react-split-pane": "^0.1.92",
    "reconnecting-websocket": "^4.4.0",
    "redux-localstorage-simple": "^2.4.1",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.30.3",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.6.5"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.1.3",
    "@testing-library/jest-dom": "5.16.3",
    "@testing-library/react": "12.1.4",
    "@testing-library/user-event": "14.0.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "16.11.12",
    "@types/nprogress": "0.2.0",
    "@types/react": "17.0.43",
    "@types/react-dom": "^17.0.11",
    "@types/w3c-web-serial": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "autoprefixer": "^10.4.4",
    "eslint": "<9.0.0",
    "eslint-config-next": "12.1.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tailwindcss": "^3.5.0",
    "husky": "^7.0.0",
    "lint-staged": "12.3.7",
    "postcss": "^8.4.5",
    "prettier": "2.6.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23",
    "ts-jest": "27.1.4",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "4.6.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "browser": {
    "fs": false
  }
}
