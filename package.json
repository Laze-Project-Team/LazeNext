{
  "name": "laze-web",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev:server": "ts-node -r tsconfig-paths/register --project tsconfig.server.json server/index.ts",
    "dev": "next dev",
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "build": "yarn build:server & yarn build:next",
    "start": "node ./dist/server/index.js",
    "lint": "next lint",
    "lint:eslint": "eslint --cache .",
    "lint:prettier": "prettier --check .",
    "test": "jest",
    "test:docs": "ts-node -r tsconfig-paths/register --project tsconfig.server.json test/docs.ts",
    "analyze": "ANALYZE=true next build",
    "prepare": "husky install"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "dependencies": {
    "@codingame/monaco-jsonrpc": "^0.3.1",
    "@codingame/monaco-languageclient": "^0.17.3",
    "@monaco-editor/react": "^4.3.1",
    "@reduxjs/toolkit": "^1.7.1",
    "antd": "^4.18.4",
    "applicationinsights": "^2.2.0",
    "compression": "^1.7.4",
    "dotenv": "^14.3.2",
    "express": "^4.17.2",
    "monaco-editor": "^0.31.1",
    "next": "12.0.8",
    "next-i18next": "^10.0.1",
    "nprogress": "0.2.0",
    "react": "17.0.2",
    "react-complex-tree": "^1.1.3",
    "react-contexify": "^5.0.0",
    "react-dom": "17.0.2",
    "react-error-boundary": "3.1.4",
    "react-icons": "^4.3.1",
    "react-markdown": "^8.0.0",
    "react-redux": "^7.2.6",
    "react-split-pane": "^0.1.92",
    "reconnecting-websocket": "^4.4.0",
    "redux-localstorage-simple": "^2.4.1",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.29.3",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.5.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.0.8",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.3",
    "@types/node": "17.0.13",
    "@types/nprogress": "0.2.0",
    "@types/react": "17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/w3c-web-serial": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "autoprefixer": "^10.4.2",
    "eslint": "<8.0.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tailwindcss": "^3.3.0",
    "husky": "^7.0.0",
    "lint-staged": "12.1.2",
    "postcss": "^8.4.5",
    "prettier": "2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "tailwindcss": "^3.0.15",
    "ts-jest": "27.1.3",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "browser": {
    "fs": false
  }
}
