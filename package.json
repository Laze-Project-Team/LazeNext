{
  "name": "laze-web",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev:server": "ts-node -r tsconfig-paths/register --project tsconfig.server.json server/index.ts",
    "dev": "next dev",
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "build": "yarn build:server & yarn build:next",
    "start": "node ./dist/server/index.js",
    "lint": "next lint",
    "lint:eslint": "eslint --cache .",
    "lint:prettier": "prettier --check .",
    "test": "jest",
    "test:docs": "ts-node -r tsconfig-paths/register --project tsconfig.server.json test/docs.ts",
    "test:locale": "ts-node -r tsconfig-paths/register --project tsconfig.server.json test/locale.ts",
    "analyze": "ANALYZE=true next build",
    "prepare": "husky install"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "dependencies": {
    "@codingame/monaco-jsonrpc": "^0.3.1",
    "@codingame/monaco-languageclient": "^0.17.4",
    "@monaco-editor/react": "^4.4.4",
    "@reduxjs/toolkit": "^1.8.1",
    "antd": "^4.20.3",
    "antd-img-crop": "^4.2.3",
    "applicationinsights": "^2.3.2",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "firebase": "^9.7.0",
    "monaco-editor": "^0.33.0",
    "next": "12.1.6",
    "next-i18next": "^11.0.0",
    "nprogress": "0.2.0",
    "react": "17.0.2",
    "react-complex-tree": "^1.1.6",
    "react-contexify": "^5.0.0",
    "react-dom": "17.0.2",
    "react-error-boundary": "3.1.4",
    "react-icons": "^4.3.1",
    "react-jdenticon": "^1.0.0",
    "react-markdown": "^8.0.3",
    "react-redux": "^7.2.8",
    "react-split-pane": "^0.1.92",
    "reconnecting-websocket": "^4.4.0",
    "redux-localstorage-simple": "^2.5.1",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.30.4",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.6.7"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.1.6",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.5",
    "@testing-library/user-event": "14.1.1",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.0",
    "@types/node": "16.11.33",
    "@types/nprogress": "0.2.0",
    "@types/react": "17.0.43",
    "@types/react-dom": "^17.0.11",
    "@types/w3c-web-serial": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "autoprefixer": "^10.4.7",
    "eslint": "<9.0.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tailwindcss": "^3.5.0",
    "husky": "^7.0.0",
    "lint-staged": "12.4.1",
    "postcss": "^8.4.13",
    "prettier": "2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.10",
    "tailwindcss": "^3.0.24",
    "ts-jest": "28.0.1",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "4.6.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "browser": {
    "fs": false
  }
}
